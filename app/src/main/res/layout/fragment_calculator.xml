<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#939090"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="start"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#939090"
        android:orientation="vertical">

        <!--Row1-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_ac"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="AC"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_change_sign"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_sp2"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_operator_shape"
                android:text="/"
                android:textSize="30sp" />

        </TableRow>

        <!--Row2-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_7"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_operator_shape"
                android:text="*"
                android:textSize="30sp" />

        </TableRow>

        <!--Row3-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_4"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_operator_shape"
                android:text="-"
                android:textSize="30sp" />

        </TableRow>

        <!--Row4-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_operator_shape"
                android:text="+"
                android:textSize="30sp" />

        </TableRow>

        <!--Row5-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="2"
                android:layout_weight="2"
                android:background="@drawable/btn_normal_shape"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_normal_shape"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:width="0dp"
                android:background="@drawable/btn_operator_shape"
                android:text="="
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>

</LinearLayout>

