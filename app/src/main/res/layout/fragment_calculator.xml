<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorDisplayBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="0.0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorDisplayBackground"
        android:orientation="vertical">

        <!--Row1-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_ac"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC" />

            <Button
                android:id="@+id/btn_change_sign"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_sp2"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%" />

            <Button
                android:id="@+id/btn_div"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operator_shape"
                android:text="/" />

        </TableRow>

        <!--Row2-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_7"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btn_mul"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operator_shape"
                android:text="*" />

        </TableRow>

        <!--Row3-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_4"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btn_sub"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operator_shape"
                android:text="-" />

        </TableRow>

        <!--Row4-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_1"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btn_add"
                style="@style/ButtonStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operator_shape"
                android:text="+" />

        </TableRow>

        <!--Row5-->
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_0"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/btn_equal"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_operator_shape"
                android:text="=" />

        </TableRow>

    </TableLayout>

</LinearLayout>